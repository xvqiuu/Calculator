<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CALCULATOR"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        />


    <TextView
        android:id="@+id/txt_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/txt_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border"
        android:text="Input"
        android:textSize="28dp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/txt_hasil"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Hasil"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/txt_input"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_hasil"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button"
        android:text="Clear"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_hasil"
        android:layout_toRightOf="@+id/btn_clear"
        android:layout_margin="5dp"
        android:text="Back"
        android:textSize="15dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_equals"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_hasil"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/btn_back"
        android:background="@drawable/rounded_button"
        android:text="="
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_clear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="1"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_clear"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/btn1"
        android:text="2"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_clear"
        android:layout_toRightOf="@+id/btn2"
        android:layout_margin="5dp"
        android:text="3"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_clear"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/btn3"
        android:background="@drawable/rounded_button"
        android:text="+"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="4"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="5"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:layout_toRightOf="@+id/btn5"
        android:layout_margin="5dp"
        android:text="6"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_subtract"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn6"
        android:layout_below="@+id/btn_add"
        android:layout_margin="5dp"
        android:text="-"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button"
        android:text="7"
        android:textSize="18dp"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn5"
        android:layout_toRightOf="@+id/btn7"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="8"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn6"
        android:layout_toRightOf="@+id/btn8"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="9"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn6"
        android:layout_below="@+id/btn_subtract"
        android:layout_margin="5dp"
        android:text="x"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_percent"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="%"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn8"
        android:layout_toRightOf="@+id/btn_percent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="0"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_coma"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn9"
        android:layout_toRightOf="@+id/btn0"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text=","
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_coma"
        android:layout_below="@+id/btn_multiply"
        android:layout_margin="5dp"
        android:text="/"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        />

</RelativeLayout>